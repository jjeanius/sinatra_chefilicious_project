<body>
  <h2> Welcome!  <%= current_customer.name %> </h2>
    <p> <h5> Username: <%= current_customer.username %> </h5> </p>
    <p> <a href="/main_menu"> Main Menu </a> </p>
    <p> <a href="/logout"> Logout </a> </p>
    <br> </br>
      <p> <h2> Account Update  </h2> <p>
        <form method="post" action="/customers/<%=current_customer.id %>">
          <input id="hidden" type="hidden" name="_method" value="patch">
            <p> <h5> Customer Name: <input type ="text" name ="customer[name]" value ="<%= @customer.name %>"> </h5> </p>
            <p> <h5> Email: <input type ="text" name ="customer[email]" value ="<%= @customer.email %>"> </h5> </p>
            <br> </br>
          <input type ="submit" value ="    UPDATE    ">
        </form>
        <br> </br>
        <% @customer.mealkits.each do |mealkit| %>
          <h2> Edit Meal Kit </h2>
            <form method="post" action="/mealkits/<%=mealkit.id%>">
              <input id="hidden" type="hidden" name="_method" value="patch">
              <p> Meal Kit Number:   <%= mealkit.id %></p>
              <p> Meal Kit Name:  <input type ="text" name= "mealkit[name]" value= "<%= mealkit.name %>">
              <p> Ingredients:  <input type ="text" name= "mealkit[ingredients]" value= "<%= mealkit.ingredients %>">
              <p> Cooking Time:  <input type ="text" name= "mealkit[time]" value= "<%= mealkit.time %>">
              <p> Serving Size:  <input type ="text" name= "mealkit[serving_size]" value= "<%= mealkit.serving_size %>"></input></p>
              <br> </br>
              <input type="submit" name="submit" value="   SUBMIT   "> </input>
            </form>
            <br> </br>
          <br> </br>
        <% end %>
</body>
